<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/shape_rl_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="@dimen/x48">

        <view.loading.LoadingView
            android:id="@+id/pop_loading_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/pop_edt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/dialog_save_edt_background"
                    android:gravity="center"
                    android:hint="输入主题"
                    android:maxLength="20"
                    android:padding="10dp"
                    android:singleLine="true"
                />
                <EditText
                    android:id="@+id/pop_edt_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/dialog_save_edt_background"
                    android:digits="~!@#$%^/+.?|\]}[{;:*()_+=-`0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLIMNOPQRSTUVWXYZ"
                    android:gravity="center"
                    android:hint="分享密码(可为空)"
                    android:maxLength="20"
                    android:padding="10dp"
                    android:singleLine="true"
                />
                <EditText
                    android:id="@+id/pop_edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/dialog_save_edt_background"
                    android:gravity="center"
                    android:hint="主持人"
                    android:maxLength="20"
                    android:padding="10dp"
                    android:singleLine="true"
                />
            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerInParent="true"
                          android:orientation="vertical">
                <TextView
                    android:id="@+id/pop_tv_share_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/pop_iv_share_QR_Code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/dialog_qrcode_iv_bg"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/pop_tv_share_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:text="扫描二维码查看记录"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:visibility="gone"/>
            </LinearLayout>

        </RelativeLayout>

        <ImageButton
            android:id="@+id/pop_but_share"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@null"
            android:src="@drawable/selector_dialog_share_btn_qr_code"
        />
    </LinearLayout>

    <ImageButton
        android:id="@+id/dialog_share_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/shape_rl_main"
        android:layout_marginEnd="@dimen/x30"
        android:layout_marginTop="@dimen/x30"
        android:background="@null"
        android:src="@drawable/dialog_button_close"/>
</RelativeLayout>
